<h1>{{title}}</h1>
<p>This is a test Heroku deployment of a canvas with WebSockets. Press 'X' to erase the board!</p>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>

<form method='POST' action='/game'>
    Join as: <input type='text' placeholder='username' id='sn'></input>
    <input type='submit' value='Go!'></button>
</form>
<div id='status_msg'></div>
<div id='user'></div>  
<div id='container'>
   <!-- Illustrator toolbar -->
    <div id="toolbar">
        <input id="clearCanvas" type="button" value="Clear Canvas">
          <!-- Brush Thickness -->
        <div id="rad">
            Weight: <span id="radval">2</span>
            <span class="radcontrols">
                <div id="decrad" class="radcontrol">-</div>
                <div id="incrad" class="radcontrol">+</div>
            </span>
        </div>
       <div id="colors"></div>
    </div>
    <!-- Drawing board -->
    <br>
<canvas id='canvas'>Your browser doesn't support HTML5 :(</canvas>
</div>
<script src="javascripts/main.js"></script>
<script src="javascripts/radius.js"></script>
<script src="javascripts/colors.js"></script>
<script src="javascripts/logic.js"></script>
